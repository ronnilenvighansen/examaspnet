<!DOCTYPE html>
<html>
<head>
    <title>Index for Game</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/style.css">

</head>
<body>
    <div class="container"></div>
    <hr>

    <a href="/Game/Create"><button>Create New Game</button></a>
    <a href="/Game/Delete"><button>Delete Game</button></a>
    <a href="/Game/Edit"><button>Edit Archive</button></a>
    <a href="/Game/Search"><button>Search Archive</button></a>
   
    <hr>
    <table class="table table-striped">
        
        
            <tr>
                <th>GameId</th>
                <th>Name</th>
                <th>Score</th>
                <th>Genre</th>
                <th>Developer</th> 
                <th>Publisher</th> 
                <th>Image</th>  
            </tr>

        @foreach(var stud in @ViewBag.stud)        
        {
            string x=@stud.Image;
  
    
            <tr>
                    <td> @stud.GameId </td>
                    <td> @stud.Name </td>
                    <td> @stud.Score </td>
                    <td> @stud.Genre </td> 
                    <td> @stud.Developer </td> 
                    <td> @stud.Publisher </td> 
                    <td><img src=@x alt="image" height="100" width="100"/></td>
            </tr>
        }
    </table>
    
    </div>
</body>
</html>